/**index.wxss**/

image {
  height: auto;
  width: auto;
}

.container {
  padding: 16rpx;
  background-color: #fff;
  position: relative;
}

.avator {
  width: 128rpx;
  height: 128rpx;
  background-color: #09bb07;
}

.panel_avator {
  width: 128rpx;
  height: 128rpx;
  display: block;
  position: absolute;
  top: 16rpx;
  left: 16rpx;
}

.panel_others {
  display: block;
  width: 80%;
  padding-left: 144rpx;
}

.nickname {
  width: auto;
  font-size: 44rpx;
  margin-bottom: 16rpx;
}

.content {
  white-space: normal;
  font-size: 32rpx;
  overflow-wrap: break-word;
}

.mainBox {
  width: 100%;
}

.image {
  width: 480rpx;
  height: 480rpx;
  margin-top: 16rpx;
  margin-bottom: 16rpx;
  display: block;
}

.publish_time {
  text-align: right;
  width: 100%;
  font-size: 30rpx;
  color: #b9b9b9;
}

.divider {
  width: 100%;
  height: 0.5px;
  background-color: #efefef;
}

.fixBtn {
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  bottom: 100rpx;
  right: 50rpx;
  z-index: 999;
}
